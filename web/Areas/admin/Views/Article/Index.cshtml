
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        var table = $("#demoGrid").DataTable({

            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 5,

            "ajax": {
                "url": "/Article/LoadData",
                "type": "POST",
                "datatype": "json"
            },

            "columnDefs":
                [
                //{
                //    "targets": [0],
                //    "visible": false,
                //    "searchable": false
                //},
                {
                    "targets": [2],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [3],
                    "searchable": false,
                    "orderable": false
                }],
            "order": [[0, "desc"]],
            "columns": [
                { "data": "ID", "name": "ID", "autoWidth": true },
                { "data": "CategoryName", "name": "CategoryName", "autoWidth": true, "sortable": true },
                { "data": "Caption", "name": "Caption", "autoWidth": true, "sortable": true },
                {
                    "title": "Oluş. Tarihi",
                    "data": "CreateDate",
                    "type": "date ",
                    "render": function (value) {
                        if (value === null) return "";

                        var pattern = /Date\(([^)]+)\)/;
                        var results = pattern.exec(value);
                        var dt = new Date(parseFloat(results[1]));

                        return dt.getDate() + "." + (dt.getMonth() + 1) + "." + dt.getFullYear() + "-" + dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();
                    },
                    "searchable": true
                },
                {
                    "render": function (data, type, full, meta) { return '<a class="btn btn-info" href="/admin/Article/Edit/' + full.ID + '">Düzenle</a>'; }
                },
                {
                    data: null, render: function (data, type, row) {
                        return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.ID + "'); >Sil</a>";
                    }
                },

            ]

        });
    });
    function DeleteData(id) {

            var r = confirm("Makaleyi Silmek İstediğinizden Emin miniz?");
            if (r == true) {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Delete", "Article")",
                    data: "{ id:"  + id + "}",
                    dataType: "json",
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        if (data.Success) {
                            alert(data.Message);
                            table.ajax.reload();
                        }
                        else {
                            alert(data.Message);
                        }
                    },
                    error: function () {
                        alert('İşlem Sırasında Hata ile Karşılaşıldı!');

                        //$("#ErrorMsg").text("İşlem Sırasında Hata Oluştu!");
                        //$('#myModal').modal("show");
                    }
                });
            }

        }
</script>

<h2>Makaleler</h2>
<br />
<div class="container">
    <div class="form-group">
        <div class="col-md-10" style="margin-bottom:15px;">
            <a class="btn btn-primary" href="/admin/Article/Create">Yeni Makale</a>
        </div>
    </div>
    <div class="form-group">
        <div style="width:100%; margin:0 auto">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Oluşturma Tarih</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    
</div>

